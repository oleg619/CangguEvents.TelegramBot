{
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information"
    },
    "WriteTo": [
      {
        "Name": "Async",
        "Args": {
          "configure": [
            {
              "Name": "Console"
            },
            {
              "Name": "File",
              "Args": {
                "path": "logs/myapp.log",
                "rollingInterval": "Day",
                "restrictedToMinimumLevel": "Debug"
              }
            },
            {
              "Name": "Seq",
              "Args": {
                "serverUrl": "http://localhost:5341"
              }
            }
          ]
        }
      }
    ]
  },
  "Mongo": {
    "connectionString": "localhost",
    "database": "events-service",
    "seed": false
  },
  "AllowedHosts": "*"
}

